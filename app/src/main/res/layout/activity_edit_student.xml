<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.students.EditStudent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_classandsection"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Spinner
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="10dp"
            android:entries="@array/class_choice"
            android:textAlignment="center"
            android:background="@drawable/round_corner_bg"
            android:id="@+id/spin1"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40sp"
                android:layout_marginHorizontal="30sp"
                android:layout_marginTop="10dp"
                android:entries="@array/section_choice"
                android:textAlignment="center"
                android:background="@drawable/round_corner_bg"
                android:id="@+id/spin2"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="10dp"
            android:text="@string/showstudent"
            android:textColor="@color/colorbg"
            android:background="@color/black"
            android:id="@+id/showStudents"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/newStd"
            android:layout_marginTop="20dp">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="30sp"
                android:layout_marginTop="10dp"
                android:text="@string/add_student"
                android:background="@color/black"
                android:textColor="@color/colorbg"
                android:layout_height="40dp"
                android:id="@+id/AddStudent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:id="@+id/view"
            android:background="@color/black"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:id="@+id/lv"
            android:background="@drawable/round_corner_bg"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</ScrollView>