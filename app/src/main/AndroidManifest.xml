<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eattendance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".teacher.PasswordTeacher"
            android:screenOrientation="portrait"/>
        <activity android:name=".student.PasswordStudent"
            android:screenOrientation="portrait"/>
        <activity android:name=".teacher.UpdateActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".authentication.ForgotPasswordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".authentication.SignUpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".authentication.AdminAuth"
            android:screenOrientation="portrait"/>
        <activity android:name=".UserType"
            android:screenOrientation="portrait"/>
        <activity android:name=".admin.students.EditStudent"
            android:screenOrientation="portrait"/>
        <activity android:name=".admin.teachers.RemoveTeacher"
            android:screenOrientation="portrait"/>
        <activity android:name=".admin.teachers.AssignClasses"
            android:screenOrientation="portrait"/>
        <activity android:name=".teacher.AttendanceListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".admin.students.AddStudent"
            android:screenOrientation="portrait"/>
        <activity android:name=".admin.teachers.AddTeachers"
            android:screenOrientation="portrait"/>
        <activity android:name=".student.StudentActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".teacher.TeacherActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".admin.AdminActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>